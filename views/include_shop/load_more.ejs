
                <div id="loadmore" class="popup" v-if="details">
                  <div class="haut">


                    <div class="column1 column">
                      <h5>{{ detailsItem[0].nom }}</h5>
                      <p><i class="fa fa-archive" aria-hidden="true"></i><span> {{ detailsItem[0].name}}</span></p>
                      <p> <i class="fas fa-chart-bar"></i><span> {{ detailsItem[0].frequence}} Hz</span></p>
                      <p> <i class="fas fa-star"></i><span> Top {{detailsItem[0].classement}}</span></p>
                      <p> <i class="fas fa-tint"></i><span> {{detailsItem[0].nbColors}} couleurs</span> </p>
                      <p> <i class="fas fa-th-large"></i><span> {{detailsItem[0].nbcellules}} cellules</span></p>
                      <p> <i class="fab fa-codepen"></i><span> {{detailsItem[0].longueur}} x  {{detailsItem[0].largeur}} cm</span></p>
                      <p> <i class="fa fa-expand" aria-hidden="true"></i> <span> {{detailsItem[0].prof}} cm </span></p>
                      <p> <i class="fa fa-tree" aria-hidden="true"></i><span> Peuplier </span></p>
                      <p> <i class="fa fa-truck" aria-hidden="true"></i><span> {{detailsItem[0].packaging}} €  </span></p>

                    </div>
                    <div class="column2 column">
                      <img v-bind:src="'images/modeles/'+detailsItem[0].name+'/'+detailsItem[0].nom+'.jpg'" alt="Affichage non disponible">
                      <div class="row_img">
                        <img v-bind:src="'images/modeles/'+detailsItem[0].name+'/'+detailsItem[0].nom+'b.jpg'" alt="Affichage non disponible">
                        <img v-bind:src="'images/modeles/'+detailsItem[0].name+'/'+detailsItem[0].nom+'c.jpg'" alt="Affichage non disponible">
                      </div>
                    </div>
                    <div class="column3 column">


                      <u> La collection  {{ detailsItem[0].name}} </u>
                      <p class="details_description">{{detailsItem[0].desc_collection}}</p>
                      <p></p>
                      <u>Le modèle {{ detailsItem[0].nom}} </u>
                      <p class="details_description">{{detailsItem[0].desc_product}}</p>


