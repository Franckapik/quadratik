<!--  LISTE ARTICLES -->
<div class="container">
  <div class="shop">
    <h2>Boutique</h2>


    <div class="collection">

      <ul v-for="(item, index) in collections" class="flex_row articles">

        <li v-for="(item, index) in collections[index]">

          <div class="article_box">


            <h5>{{ item.nom }}</h5>
            <p>{{ item.prix }} €</p>


            <img v-bind:src="'images/modeles/'+item.name+'/'+item.nom+'.jpg'" alt="Affichage non disponible" data-action="zoom">
            <p> <i class="fas fa-chart-bar"></i><span> {{ item.frequence}} Hz</span>
              <i class="fas fa-star"></i><span>{{item.classement}}</span>
              <i class="fas fa-tint"></i><span> {{item.nbColors}}</span> </p>
            <p><i class="fas fa-th-large"></i><span> {{item.nbcellules}} cellules</span>
            <i class="fab fa-codepen"></i><span> {{item.longueur}} x  {{item.largeur}} cm</span></p>

            <p><i class="fas fa-search cursor details_icons" @click="showDetails(item)"> Détails </i> </p> <p> <i class="fas fa-3x fa-cart-arrow-down cursor accent_icons" @click="addToCart(item)"></i></p>

          </div>
        </li>

      </ul>
    </div>



  </div>
</div>
