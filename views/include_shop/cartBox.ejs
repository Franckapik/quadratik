<div class="cart_box" v-show="cart_box">

  <!-- PANIER-->

  <button @click="showCart = !showCart" v-show="!cart_large">

 {{ articlesQty + (articlesQty > 1 ? " articles" : " article") }}
</button>

<div v-show="showCart">
<fieldset>
<legend> Panier </legend>

    <div v-show="items.length > 0">
      <ul>

        <li v-for="item in items">
          <p><strong>{{ item.qty }}</strong> - {{ item.name }} <i class="fa fa-trash" @click="removeFromCart(item)"></i></p>
        </li>
      </ul>
      <div><button @click="cart_large = true, showCart = false, boutique = false" id="order_button">Commander</button></div>
    </div>
    <div v-show="items.length === 0">
      <p>Votre panier est vide!</p>
    </div>
  </div>
</fieldset>
</div>
