                    <div class="close" column>
                      <i class="fa fa-window-close fa-2x" aria-hidden="true" @click="details=false"></i>
                    </div>

                  </div>
                  <div class="bas">
                    <span class="price"> {{detailsItem[0].prix}} €</span> <button @click="addToCart(detailsItem[0])">Ajouter au panier</button>
                  </div>






