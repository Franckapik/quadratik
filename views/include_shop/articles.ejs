<div class="container">
  <div class="shop" v-show="boutique">
    <h2>Boutique</h2>
    <div class="collection">
      <h3>Simple et efficace : Klassik-6</h3>
      <ul class="flex_row">
        <li v-for="value in shop">
          <div class="article_box">
            <div v-if="value.collectionId == 1">

              <h5>{{ value.name }}</h5>
              <p>{{ value.price }} €</p>

              <img v-bind:src="'images/modeles/'+value.collection.name+'/'+value.name+'.jpg'" alt="Affichage non disponible" data-action="zoom">
              <p> <i class="fas fa-chart-bar"></i><span> {{ value.performance.frequence}} Hz</span>
                <i class="fas fa-star"></i><span>{{value.performance.classement}}</span>
                <i class="fas fa-tint"></i><span> {{value.nbCouleurs}}</span> </p>



              <button @click="addToCart(value)">Ajouter au panier</button>
