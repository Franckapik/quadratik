<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Admin</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body id="body_guide">
  <% include header.ejs %>
    <div class="order_bar"></div>
    <div class="order_content">
      ADMIN
      <p></p>
      <div class="order_bar"> </div>


Liste des produits disponibles
      <hr>

        <% for(var i=0; i<product.length; i++) {%>
          <ul class="admin_ul3">

          <li><%= product[i].nom %> ( <%= product[i].name %> )</li>
          <li><img style="width: 100px;" src="/images/modeles/<%= product[i].name %>/<%= product[i].nom %>.jpg" alt=""></li>
          <li><%= product[i].prix %> €</li>
          <li><%= product[i].frequence %> Hz</li>
          <li>Top <%= product[i].classement %> </li>
          <li>Modèle : <%= product[i].modele %></li>
          <li><%= product[i].nbColors %> couleur(s) </li>
          <li>Nombre pièces <%= product[i].nbpieces %></li>
          <li>Nombre carreaux <%= product[i].nbcarreaux %></li>
          <li>Surface (m²) <%= product[i].surface %></li>
          <li>Prix couleurs client <%= product[i].prixcolorsclient %></li>


          <li>prof <%= product[i].prof %></li>
          <li>prix/couleur<%= product[i].prixcolors %></li>
          <li>prix tot [Peuplier] <%=(product[i].surface * essence[0].prixessence + product[i].prixcolors).toFixed(2) %>  € </li>
          <li>prix conseillé [Peuplier] <%= Math.round(product[i].surface * essence[0].prixessenceclient + Number(product[i].prixcolorsclient)) %>  € </li>
          <li>prix affiché <%= product[i].prix %>  €</li>
          <li>poids <%=(product[i].surface * essence[1].poidsessencem2 ).toFixed(2)%>  kg </li>
          <li>marge : <%=( product[i].prix - (product[i].surface * essence[0].prixessence + Number(product[i].prixcolors) )).toFixed(2) %>  €</li>
          </ul>
        <% } %>


<p></p>
Liste des utilisateurs
      <hr>

        <% for(var i=0; i<user.length; i++) {%>
          <ul class="admin_ul3">
          <li><%= user[i].nom %> <%= user[i].prenom %> </li>
          <li><%= user[i].adresse %> </li>
          <li><%= user[i].ville %> - <%= user[i].postal %> </li>
          <li><%= user[i].mail %> </li>
          <li><%= user[i].telephone %> </li>
          <li><%= user[i].contexte %> </li>

          //COMMANDE

          <li><%= user[i].reference %> </li>
          <li><%= user[i].mode %> </li>
          <li><%= user[i].amount %> </li>
          <li><%= user[i].cardtype %> </li>
          <li><%= user[i].number %> </li>
          <li><%= user[i].expirationdate %> </li>
          <li><%= user[i].transactionid %> </li>
          <li><%= user[i].status %> </li>

          //LIVRAISON

          <li><%= user[i].livr_mode %> </li>
          <li><%= user[i].livr_nom %> </li>
          <li><%= user[i].livr_ville %> </li>
          <li><%= user[i].livr_postal %> </li>
          <li><%= user[i].livr_adresse %> </li>

          //PANIER

          <li><%= user[i].total_produits %> </li>
          <li><%= user[i].total_fdp %> </li>
          <li><%= user[i].total %> </li>
          <li><%= user[i].products %> </li>
          <li><%= user[i].sessid %> </li>


        <!--  <li><%= user[i].coef * (user[i].prof * user[i].prixessence + user[i].prixcolors ) %></li> -->

          </ul>
        <% } %>
</body>


</html>
