    <p></p>
    <div class="collection">

      <ul v-for="(item, index) in collections" class="flex_row">

          Collection

          <li v-for="(item, index) in collections[index]">

            <div class="article_box">

              <!--<h5>{{item}}</h5>-->
              <h5>{{ item.nom }}</h5>
              <p>{{ item.prix }} €</p>


              <img v-bind:src="'images/modeles/'+item.name+'/'+item.nom+'.jpg'" alt="Affichage non disponible" data-action="zoom">
              <p> <i class="fas fa-chart-bar"></i><span> {{ item.frequence}} Hz</span>
                <i class="fas fa-star"></i><span>{{item.classement}}</span>
                <i class="fas fa-tint"></i><span> {{item.nbColors}}</span> </p>



              <button @click="addToCart(item)">Ajouter au panier</button>
